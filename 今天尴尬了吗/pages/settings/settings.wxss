.container {
  padding: 40rpx;
  background: #1a1a1a;
  min-height: 100vh;
}

.title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.settings-list {
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #333;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #fff;
}

.setting-value {
  font-size: 28rpx;
  color: #999;
}

.switch {
  transform: scale(0.8);
}

.version {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 60rpx;
}
