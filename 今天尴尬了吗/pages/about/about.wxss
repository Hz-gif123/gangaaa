.container {
  padding: 40rpx;
  background: #1a1a1a;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 60rpx 0;
  border-radius: 40rpx;
  background: #2a2a2a;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.app-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.version {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.info-section {
  width: 100%;
  background: #2a2a2a;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.section-title {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.section-content {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

.footer {
  margin-top: auto;
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 40rpx 0;
}
